
@import 'jeet'
@require 'variables'


.foowd-navbar
  cf()
  height: contentMargin;
  width : 100%
  position : fixed
  top : 0
  z-index: 10000;
  box-shadow: 0 0px 20px 0px #f0f0f0;

.navbar-section
  column(1/2, cycle: 2)
  span(1/2)
  height:100%;
  +below(bp)
    stack()
    background-color:red;

#logo
  background-color: rgb(250,230,239);

#foowd-brand
  column(1/2)  
  align(vertical)
  margin-left:20px;
  text-decoration : none;
  color: black;
  font-family AkkuratBold;
  font-size: 24pt;
  line-height : 24pt;
  letter-spacing: -1.5pt;
  span
    cursor: pointer;
  input
    width:40%;
    background-color: rgb(250,230,239);
    outline:none;
    border: none;
    
#user-menu-section
  background-color: rgb(255,255,255);


#user-menu
  position:relative;
  right: 0;
  margin-right: 20px
  display: inline-block;
  font-size:24pt;
  align(vertical)
  span
    display: -webkit-inline-box;
  
.preferences-link
  font-size : 20pt;
  line-height: 16pt;
  cursor:pointer
.profile-link
  font-size : 20pt;
  line-height: 16pt;
  cursor:pointer
.menu-link
  font-size : 26pt;
  line-height: 16pt;
  cursor:pointer

.fw-menu-icon
  cursor: pointer;
  color:black
    
#price-section
  height: 100%;
  background:trasparent;

