@import 'jeet'
@require 'variables'
@require 'mixins'

.grid
	margin-top: contentMargin + containerMargin
	list-style: none;
	padding: 0 stdMargin - productMargin 0 stdMargin - productMargin;
	align(horizontal)
	+below(bp)
		margin-top : contentMargin * 2 + containerMargin

.grid li
	float: left;
	width: productSize
	margin: 0px productMargin stdMargin productMargin !important;
	opacity: 0;


.grid li.shown,
.no-js .grid li,
.no-cssanimations .grid li {
	opacity: 1;
}

//* Effect 1: opacity */
.grid.effect-1 li.animate {
	//-webkit-animation: fadeIn 0.65s ease forwards;
	//animation: fadeIn 0.65s ease forwards;
	vendor(animation, fadeIn 0.65s ease forwards)
}

@-webkit-keyframes fadeIn {
	0% { }
	100% { opacity: 1; }
}

@keyframes fadeIn {
	0% { }
	100% { opacity: 1; }
}

postZindexBase = 50

.product-post-image-thumbnail
	display: table
	z-index: postZindexBase * -1
	img
		span(1)
		position : relative
		z-index: -1
.tint
	position : relative
	width : 100%
	margin : 0
	padding :0
	display: table
	background: rgba(0,0,0,0.2);
	
.heart-overlay
	margin : 0 
	padding: 0
	position:absolute
	z-index : postZindexBase * 3
	top: 0;
	left:0
	text-align: center
	font-size: 72pt;
	background: none
	color: white;
	opacity : 0;
	vendor(transition, opacity .15s ease)
    

.heart-overlay:hover
	opacity:1

.product-post-header
	top: 0px;
	span(1)
	position: absolute;
	z-index: postZindexBase * 3


.product-post-name
	column(1/2)
	padding: 10px 0 0 10px;
	color: white;
	font-family: AkkuratBold
	font-size: 12pt;
	line-height: 14pt;
	letter-spacing : -0.5pt
	z-index:100;

.product-post-unit-price
	font-size:12pt;
	line-height:14pt;
	letter-spacing : -0.5pt

.product-post-progress-price
	padding: 5px 10px 0 0; 
	color: white;
	font-family: AkkuratBold;
	font-size : 18pt;
	line-height: 14pt;
	letter-spacing: -1.5pt;
	text-align : right;

.mini-progress-bar
	position: absolute;
	width: 40px;
	top: 25px;
	right: 90px;
	height: 4px;

.mini-progress
	background-image : url('../../img/barra-bianca.png');
	background-repeat : no-repeat;
	background-position: left top
	height:100%
	span(1)

.product-post-menu
	position : relative
	float: left
	margin: -40px 0 0 0;
	vertical-align: baseline;
	padding: 0 0 0 10px;
	background: none
	z-index : postZindexBase *3
	div
		display: -webkit-inline-box;
		background-color : foowdPink
		border-radius : 50%
		padding:0
		span
			padding:0
			margin: 0
			font-size : 22pt;
			line-height: 22pt;
			color: black

.red-heart
	color:red;
	
	


