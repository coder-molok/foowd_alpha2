
@import 'jeet'
@require 'variables'

preferenceHeight = 120px;
preferenceTopBottomMargins = 10px 
preferenceRightLeftMargins = stdMargin
preferenceSectionTopMargin = 30px

#account-menu
	height: 300px;

#user-details
	margin-top: contentMargin;
	height: 180px;
	column(1)
	+below(bp)
		margin-top: contentMargin * 2;
#user-avatar
	width:100px;
	border-radius:50%;
	display: block;
	margin-left: auto;
	margin-right: auto;
	margin-top: 20px;

#username
	font-family: AkkuratBold;
	font-size: 16px;
	margin-top:15px;
#board
	font-family: AkkuratRegular
	font-size: 12px;
#username, #board
	text-align: center;

#account-info
	column(1)
	height:100px;
	padding: 20px;
	margin-top: 10px;
.account-info-section
	display:inline-block;
	span(1/12)
	+below(bp)
		span(1/6)

#preferences-container
	column(1)

.preference
	column(1)
	height: preferenceHeight
	+below(bp)
		height: preferenceHeight * 2

.preference-progress-bar
	position: absolute;
	left: 0;
	height: preferenceHeight
	width: 100%
	z-index : -100
	.progress
		height: 100%
		position: absolute
		z-index : -100
	+below(bp)
		height: preferenceHeight*2

.user-preference
	column(1)
	height: preferenceHeight
	border-top: 1px solid #d0d0d0;
	padding : preferenceTopBottomMargins preferenceRightLeftMargins preferenceTopBottomMargins preferenceRightLeftMargins
	+below(bp)
		height: 2*preferenceHeight - 2*preferenceTopBottomMargins
	
.user-preference-section
	column(1/4)
	span(1/4)
	height: preferenceHeight - 2*preferenceTopBottomMargins
	+below(bp)
		column(1/2, cycle: 2)
		span(1/2)

.user-preference-image
	width:100px;
	height:100px;
	border-radius:50%;
	cursor: pointer;

.user-preference-name
	shift(-1/12)
	+below(bp)
		span(1/2)
		shift(-1/6)
	ul
		margin-top : preferenceSectionTopMargin
		width:100%;

.user-preference-details
	+below(bp)
		span(1/2)
		
.preference-detail
	span(1/3)
	margin-top : preferenceSectionTopMargin
	display:inline-block;
	li
		+below(bp)
			margin-left:20px;
	
.user-preference-actions
	+below(bp)
		span(1/2)
	ul
		margin-top : preferenceSectionTopMargin - 10px
		width : 100%
		height : 100%
		


