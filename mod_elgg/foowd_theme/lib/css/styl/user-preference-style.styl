
@import 'jeet'
@require 'variables'


#account-menu
	height: 300px;

#user-details
	margin-top: contentMargin;
	height: 180px;
	column(1)
	+below(bp)
		margin-top: contentMargin * 2;
#user-avatar
	width:100px;
	border-radius:50%;
	display: block;
	margin-left: auto;
	margin-right: auto;
	margin-top: 20px;

#username
	font-family: AkkuratBold;
	font-size: 16px;
	margin-top:15px;
#board
	font-family: AkkuratRegular
	font-size: 12px;
#username, #board
	text-align: center;

#account-info
	column(1)
	height:100px;
	padding: 20px;
	margin-top: 10px;
.account-info-section
	display:inline-block;
	span(1/12)
	+below(bp)
		span(1/6)

#preference-container
	column(1)

.preference
	column(1)
	height: 120px
	+below(bp)
		height:240px;

.preference-progress-bar
	position: absolute;
	left: 0;
	height: 120px
	width: 100%
	z-index : -100
	.progress
		height: 100%
		position: absolute
		z-index : -100
		background-color: rgb(250,230,239);
	+below(bp)
		height:240px

.user-preference
	column(1)
	height: 120px;
	border-top: 1px solid #d0d0d0;
	+below(bp)
		height:240px;
	
.user-preference-section
	column(1/4)
	span(1/4)
	+below(bp)
		column(1/2, cycle: 2)
		span(1/2)

.user-preference-image
	margin-top: 10px;
	margin-left : 20px;
	width:100px;
	height:100px;
	border-radius:50%;

.user-preference-name
	shift(-1/12)
	+below(bp)
		span(1/2)
		shift(-1/6)
	ul
		margin-left:20px;
		margin-top:35px;
		width:100%;

.user-preference-details
	+below(bp)
		span(1/2)
		
.preference-detail
	span(1/3)
	margin-top:35px;
	display:inline-block;
	li
		+below(bp)
			margin-left:20px;
	
.user-preference-actions
	+below(bp)
		span(1/2)
	ul
		margin-top :30px;
	