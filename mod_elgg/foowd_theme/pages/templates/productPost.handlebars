<li class="product-post">
    <div class="post-container">
        <div class="product-post-image-thumbnail">
            <figure class="tint">
                <img src="{{picture}}">
            </figure>
            <span class="heart-overlay foowd-icons foowd-icon-heart-full"
                  title="Clicca per aggiungere una preferenza a questo prodotto!"
                  onclick="window.addPreference({{Id}},1)">
            </span>
            <div class="product-post-menu">
                <div onclick="utils.go2('detail', 'productId', {{Id}})"
                     title="Dettagli del prodotto">
                   <span class = "foowd-icons foowd-icon-len">
                   </span>
                </div>
                <div onclick="utils.go2('producer', 'producerId', {{Publisher}})"
                     title="Dettagli del produttore">
                   <span class = "foowd-icons foowd-icon-blade">
                   </span>
                </div>
            </div>
        </div>
        <div class="product-post-header">
            <div class="product-post-name">
                {{Name}}
                <br/>
                <br/>
                <span class="product-post-unit-price">
                    {{Quota}} {{Unit}} {{UnitExtra}}
                    <br/>
                    {{Price}}€
                </span>
            </div>
            {{#if logged}}
                <span class="mini-progress-bar" title="Preferenze espresse rispetto al minimo necessario per un ordine">
                    <span class="mini-progress" data-unit="1" data-progress="{{totalQt}}" data-total="{{Minqt}}"></span>
                </span>  
                <div class="product-post-progress-price">
                {{math totalQt '*' Price}}
                    <span class="apex">€</span>
                </div>
            {{/if}}
        </div>
        <div class="product-post-body">
                {{{shortDesc Description}}}
        </div>
    </div>
</li>