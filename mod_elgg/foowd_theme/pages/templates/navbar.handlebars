{{#if reverse}}
  <div class="navbar-section reverse logo" >
      <div class="foowd-brand reverse">
       <span onClick="utils.goTo('')">foowd_</span>
      </div>
  </div>
  <div class = "navbar-section reverse logo" id="user-menu-section">
      <div id = "user-menu">
          <span onClick="utils.goTo('board')" 
                class="foowd-icons foowd-icon-heart-edge fw-menu-icon preferences-link reverse">
          </span>
          <a href="{{panelUri}}">
            <span class="foowd-icons foowd-icon-user fw-menu-icon profile-link">
            </span>
          </a>
          {{! <span id="trigger-overlay" 
                class="foowd-icons foowd-icon-menu fw-menu-icon menu-link reverse">
          </span> }}
      </div>
  </div>
{{/if}}

{{#if regular}}
  <a id="foowd-brand-home-uri" href="{{homeUri}}">
  <div class="navbar-section logo" >
      <div class="foowd-brand">
        <input id="search-input-phantom" style="position:fixed; left: 70%; visibility: hidden;"/>
       <div class="foowd-brand-pre-search">foowd<span class="foowd-pulsate underscore-search">_</span></div>
       {{#if search}}
        <div id="searchText-loom">
          <span id="search-dots"></span>
          <div id="searchText" onkeypress="window.searchProductsKey(event)"></div>
        </div>
       {{/if}}
      </div>
  </div>
  </a>
  <div class="navbar-section" id="user-menu-section">
      <div id="user-menu">
          {{#if logged}}
	      	 <span id="groupBtn" onClick="window.toggleGroup()" 
	                class="foowd-icons icon-black foowd-icon-group fw-menu-icon preferences-link">
	          </span>
            {{/if}}
            <a href="{{boardUri}}">
              <span class="foowd-icons foowd-icon-heart-edge fw-menu-icon preferences-link">
              </span>
            </a>
            <a href="{{panelUri}}">
              <span class="foowd-icons foowd-icon-user fw-menu-icon profile-link">
              </span>
            </a>
            {{!<span id="trigger-overlay" 
                class="foowd-icons foowd-icon-menu fw-menu-icon menu-link">
            </span>}}
      </div>
  </div>
{{/if}}
