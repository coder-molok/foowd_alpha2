.foowd-back-strong
	background-color: foowdTopbar

.foowd-back-soft
	background-color: foowdPink



.elgg-page-header
	background-color: foowdPink;
	background-image: none;

	// centro la scritta foowd_
	& > .elgg-inner 
		display: flex;
		align-items: center;

.foowd-header
	text-decoration: none;
	color: #000;
	font-family: AkkuratBold;
	font-size: 24pt;
	line-height: 24pt;
	letter-spacing: -1.5pt;

.elgg-page-topbar
	background-image: none;
	background-color: foowdTopbar;
	border-bottom: 0;

	
.elgg-page-body, 
.foowd-elements-footer
	padding: 0
	padding-top: 20 px
	width: 100%
	min-width: 400px
	// margin: auto
	margin: 0
	margin-bottom: 40px

.elgg-inner
	margin: 0
	padding: 0
	
	.elgg-main
		max-width: 60%
		margin: auto



// pagine con sidebar:
.elgg-layout-one-sidebar
	background: none // rimuovo il background grigio della sidebar, che in realta' e' un'immagine di sfondo


.foowd-elements-footer
	margin-top: 5px
	
	.foowd-footer
		text-align: center
		margin: auto
		border-collapse: collapse // niente spazi tra le celle
		
		td
			border-left: 1px solid black;
			border-right: 1px solid black;
			padding: 5px
			padding-top: 0
			padding-bottom: 0
			&:first-child
				border-left: none
			&:last-child
				border-right: none


a, a:link ,a:visited, a:active
	color: foowdTopbar
	
	&.elgg-button//, &.elgg-menu-content
		// background-color purple
		color: #ffffff
		
		&:hover
			color foowdTopbar
			background-color foowdPink
	
		// &:active, &:visited
		// 	color: foowdPink

.elgg-sidebar
	
	background-color #86385B

	a, a:link
		
		&.elgg-menu-content
			color foowdTopbar
	a:hover
		background-color foowdPink
		
	li.elgg-state-selected > a
		background-color #CF8BCD


.elgg-button, .elgg-button-submit
	border-radius: 0px;
	background: none;
	background-color: foowdButtonBackground
	border none
	text-shadow: none
	box-shadow: none
	margin-right: 10px
	color: #ffffff
	
	&:hover, &:focus
		outline none !important
		background: none;
		background-color: foowdPink
		border 0px
		color foowdButtonBackground
		text-shadow: none
		box-shadow: 0 0 3px foowdButtonBackground

.elgg-module-info 
	& > .elgg-head
		padding 5px 5px 2px 0px
		margin-top 20px
		border-radius 0
		background none //foowdKeen
		
		h3
			border-color foowdDark
			padding-bottom 5px
			
	.elgg-body
		padding-left 10px
	
	


input[type="text"],
input[type="email"],
input[type="password"],
input[type="url"],
input[type="file"],
textarea
	border-radius: 0
	&:focus
		background-color foowdPink
		border-color: foowdTopbar
		

// jQuery ui
.ui-datepicker 
	th
		color foowdTopbar		


// Pagina Add

.foowd-page-add,
.foowd-page-single
	width: 500px
	margin: auto
	
	.chosen-container-multi
		width: 150px
		
	input[name="Quota"]
		width: 90px
		
	input[name="Price"]
		width: 120px
		
	input[name="Minqt"],
	input[name="Maxqt"]
		width: 150px
		
	
	input[name="UnitExtra"]
		width: 265px

		

