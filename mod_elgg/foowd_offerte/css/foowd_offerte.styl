
@import '../../foowd_theme/lib/css/styl/variables.styl'

/******** add e update ******/

.elgg-form-foowd-offerte-add,
.elgg-form-foowd-offerte-update,
	label
		position: relative

		errorBackground = #B98686
		[class^=error-]
			position: absolute
			top: -4px
			// top: 0
			// left: 150px
			margin-left: 20px
			padding: 3px 7px
			background-color: errorBackground
			color: white //red
			white-space: nowrap
			font-style: italic
			font-size: 0.9em
		
			&:before
				width: 0
				height: 0
				border-top: 10px solid transparent
				border-right: 21px solid errorBackground
				border-bottom: 10px solid transparent
				content: ''
				position: absolute
				left: -20px
				top 0px

	#quota-preview
		// margin: 10px
		padding: 5px
		height: 31px
		font-style: italic
		background-color: foowdPink//rgba(36, 153, 236, 0.1)
		color: gray
		border: 1px solid #CCC
		// width: 270px
		// display: inline-block


