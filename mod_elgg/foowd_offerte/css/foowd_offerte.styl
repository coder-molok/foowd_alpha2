/* lightbox loader image in crop.js */
.foowd-lightbox 
	background-color: rgba(30, 20, 30, 0.8)
	background: rgba(30, 20, 30, 0.8)
	color: rgba(30, 20, 30, 0.8)

	position : fixed
	top : 0
	width : 100%
	height : 100%
	z-index : 5


.progress-container
	position: relative
	width: auto
	display : inline          /* faccio in modo che le dimensioni si adattino a quelle del content */
	text-align: center


.progress-value
	margin-left : 15px
	font-weight : bold
	color : #34BD34



