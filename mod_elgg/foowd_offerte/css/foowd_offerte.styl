
@require '../../foowd_theme/lib/css/styl/variablesBackEnd.styl'

/******** add e update ******/

.elgg-form-foowd-offerte-update
	// nascondo l'immagine fino a quando non carico il crop.
	#image-container
		display: none
		
.elgg-form-foowd-offerte-add,
.elgg-form-foowd-offerte-update,
	

	label
		position: relative

		errorBackground = foowd5 //#B98686
		[class^=error-]
			position: absolute
			top: -4px
			// top: 0
			// left: 150px
			margin-left: 20px
			padding: 3px 7px
			background-color foowdl[5] //errorBackground
			color: white //red
			white-space: nowrap
			font-style: italic
			font-size: 0.8em
		
			&:before
				width: 0
				height: 0
				border-top: 9px solid transparent
				border-right: 21px solid errorBackground
				border-bottom: 0px solid transparent
				content: ''
				position: absolute
				left: -20px
				top 0px

	#quota-preview
		// margin: 10px
		padding: 5px
		height: 31px
		font-style: italic
		background-color: foowdl[2]
		color: foowd1
		border: 1px solid foowd2
		// width: 270px
		// display: inline-block
			
	.foowd-advise-pending
		background-color: foowd5
		padding: 3px

	.foowd-advise-newest
		background-color: foowd3
		padding: 3px
		
	.foowd-advise-modified
		&:before
			content: 'Campo Modificato'
			border-bottom 1px solid foowd5 //foowdd[3]
			color foowd5 //foowdd[3]
			width 100%
			position absolute
			text-align right
			font-style italic
			font-size 0.9em
			


